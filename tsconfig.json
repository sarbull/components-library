{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "dist/types",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmitOnError": true,
    "outDir": "dist/esm",
    "resolveJsonModule": true,
    "target": "ES2015",
    "isolatedModules": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
}